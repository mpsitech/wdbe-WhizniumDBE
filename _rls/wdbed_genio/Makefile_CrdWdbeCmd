# file Makefile
# make file for CrdWdbeCmd card job handler, release wdbed_genio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbed/VecWdbe -I$(SRCROOT)/wdbed/IexWdbe -I$(SRCROOT)/wdbed
INCPATH += -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWdbeCmd.o PnlWdbeCmdList.o QryWdbeCmdList.o PnlWdbeCmdHeadbar.o PnlWdbeCmdRec.o PnlWdbeCmdMNController.o QryWdbeCmdMNController.o PnlWdbeCmdAInvpar.o QryWdbeCmdAInvpar.o PnlWdbeCmdARetpar.o QryWdbeCmdARetpar.o PnlWdbeCmdDetail.o

LIB = libcrdwdbecmd

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbed/

clean:
	rm -f *.o

