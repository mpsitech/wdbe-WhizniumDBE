# file Makefile
# make file for CrdWdbeCvr card job handler, release wdbed_jack
# author Alexander Wirthmueller
# date created: 23 Aug 2020
# modified: 23 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbed/VecWdbe -I$(SRCROOT)/wdbed/IexWdbe -I$(SRCROOT)/wdbed
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWdbeCvr.o DlgWdbeCvrBsccd.o DlgWdbeCvrDetcd.o DlgWdbeCvrNew.o DlgWdbeCvrWrite.o PnlWdbeCvrRec.o PnlWdbeCvrDetail.o PnlWdbeCvrAIp.o QryWdbeCvrAIp.o PnlWdbeCvrAPlh.o QryWdbeCvrAPlh.o PnlWdbeCvrBcv1NCoreversion.o QryWdbeCvrBcv1NCoreversion.o PnlWdbeCvrHk1NModule.o QryWdbeCvrHk1NModule.o PnlWdbeCvrHeadbar.o PnlWdbeCvrList.o QryWdbeCvrList.o

LIB = libcrdwdbecvr

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbed/

clean:
	rm -f *.o

