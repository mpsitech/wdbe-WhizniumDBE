# file Makefile
# make file for CrdWdbeMtp card job handler, release wdbed_ungenio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbed/VecWdbe -I$(SRCROOT)/wdbed/IexWdbe -I$(SRCROOT)/wdbed
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWdbeMtp.o PnlWdbeMtpList.o QryWdbeMtpList.o PnlWdbeMtpHeadbar.o PnlWdbeMtpRec.o PnlWdbeMtpRef1NFile.o QryWdbeMtpRef1NFile.o PnlWdbeMtpMge1NSignal.o QryWdbeMtpMge1NSignal.o PnlWdbeMtpSup1NModule.o QryWdbeMtpSup1NModule.o PnlWdbeMtpMdl1NPort.o QryWdbeMtpMdl1NPort.o PnlWdbeMtpTpl1NModule.o QryWdbeMtpTpl1NModule.o PnlWdbeMtpMdl1NGeneric.o QryWdbeMtpMdl1NGeneric.o PnlWdbeMtpAPar.o QryWdbeMtpAPar.o PnlWdbeMtpKHdltype.o QryWdbeMtpKHdltype.o PnlWdbeMtpKParKey.o QryWdbeMtpKParKey.o PnlWdbeMtpDetail.o

LIB = libcrdwdbemtp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbed/

clean:
	rm -f *.o

