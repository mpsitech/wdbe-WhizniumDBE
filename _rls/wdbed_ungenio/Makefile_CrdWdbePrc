# file Makefile
# make file for CrdWdbePrc card job handler, release wdbed_ungenio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbed/VecWdbe -I$(SRCROOT)/wdbed/IexWdbe -I$(SRCROOT)/wdbed
INCPATH += -I/Library/PostgreSQL/9.6/include -I/usr/local/include -I/usr/local/include/curl -I/usr/local/include/libxml2 -I/usr/local/mysql/include

OBJS = CrdWdbePrc.o PnlWdbePrcList.o QryWdbePrcList.o PnlWdbePrcHeadbar.o PnlWdbePrcRec.o PnlWdbePrcFsmFsm1NFsmstate.o QryWdbePrcFsmFsm1NFsmstate.o PnlWdbePrcMge1NSignal.o QryWdbePrcMge1NSignal.o PnlWdbePrcPrc1NVariable.o QryWdbePrcPrc1NVariable.o PnlWdbePrcKHdltype.o QryWdbePrcKHdltype.o PnlWdbePrcDetail.o

LIB = libcrdwdbeprc

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbed/

clean:
	rm -f *.o

