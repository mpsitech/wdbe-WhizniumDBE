# file Makefile
# make file for operation pack WdbeWrfpga, release wdbeopd1_genio
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbeopd1/VecWdbe -I$(SRCROOT)/wdbeopd1/IexWdbe -I$(SRCROOT)/wdbeopd1
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = WdbeWrfpga_blks.o WdbeWrfpga.o
OBJS += WdbeWrfpgaBase.o WdbeWrfpgaCtrFwdctr.o WdbeWrfpgaDeploy.o WdbeWrfpgaEhostif.o WdbeWrfpgaHostif.o WdbeWrfpgaIpclr.o WdbeWrfpgaMdlfine.o WdbeWrfpgaMdlraw.o

LIB = libwdbewrfpga

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbeopd1/

clean:
	rm -f *.o

