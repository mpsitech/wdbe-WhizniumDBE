# file Makefile
# make file for operation pack WdbeMtpPlhmcu, release wdbeopd2_awsubt
# author Alexander Wirthmueller
# date created: 23 Aug 2020
# modified: 23 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbeopd2/VecWdbe -I$(SRCROOT)/wdbeopd2/IexWdbe -I$(SRCROOT)/wdbeopd2
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = WdbeMtpPlhmcu_blks.o WdbeMtpPlhmcu.o
OBJS +=

LIB = libwdbemtpplhmcu

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbeopd2/

clean:
	rm -f *.o

