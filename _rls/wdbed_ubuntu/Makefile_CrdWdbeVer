CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswdbe -I$(BUILDROOT)/wdbed/VecWdbe -I$(BUILDROOT)/wdbed/IexWdbe -I$(BUILDROOT)/wdbed
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWdbeVer.o PnlWdbeVerList.o QryWdbeVerList.o PnlWdbeVerHeadbar.o PnlWdbeVerRec.o PnlWdbeVerRef1NFile.o QryWdbeVerRef1NFile.o PnlWdbeVer1NUnit.o QryWdbeVer1NUnit.o PnlWdbeVer1NComponent.o QryWdbeVer1NComponent.o PnlWdbeVerBvr1NVersion.o QryWdbeVerBvr1NVersion.o PnlWdbeVerDetail.o DlgWdbeVerFinmod.o DlgWdbeVerGenfst.o DlgWdbeVerNew.o DlgWdbeVerCmdset.o DlgWdbeVerCustfst.o DlgWdbeVerDeploy.o DlgWdbeVerDflalg.o DlgWdbeVerMdlstr.o

LIB = libcrdwdbever

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

