include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswdbe -I$(BUILDROOT)/wdbed/VecWdbe -I$(BUILDROOT)/wdbed/IexWdbe -I$(BUILDROOT)/wdbed
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWdbeMtp.o PnlWdbeMtpList.o QryWdbeMtpList.o PnlWdbeMtpHeadbar.o PnlWdbeMtpRec.o PnlWdbeMtpRef1NFile.o QryWdbeMtpRef1NFile.o PnlWdbeMtpMge1NSignal.o QryWdbeMtpMge1NSignal.o PnlWdbeMtpRef1NSensitivity.o QryWdbeMtpRef1NSensitivity.o PnlWdbeMtpRef1NVariable.o QryWdbeMtpRef1NVariable.o PnlWdbeMtpSup1NModule.o QryWdbeMtpSup1NModule.o PnlWdbeMtpMdl1NGeneric.o QryWdbeMtpMdl1NGeneric.o PnlWdbeMtpTpl1NModule.o QryWdbeMtpTpl1NModule.o PnlWdbeMtpHsm1NPipeline.o QryWdbeMtpHsm1NPipeline.o PnlWdbeMtpMdl1NPort.o QryWdbeMtpMdl1NPort.o PnlWdbeMtpAPar.o QryWdbeMtpAPar.o PnlWdbeMtpKHdltype.o QryWdbeMtpKHdltype.o PnlWdbeMtpKParKey.o QryWdbeMtpKParKey.o PnlWdbeMtpDetail.o

LIB = libcrdwdbemtp

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)

install:
	mv $(LIB).a $(LIBROOT)/wdbed/

clean:
	rm -f *.o
