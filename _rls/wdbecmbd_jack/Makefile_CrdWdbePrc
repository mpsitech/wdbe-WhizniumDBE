# file Makefile
# make file for CrdWdbePrc card job handler, release wdbecmbd_jack
# author Alexander Wirthmueller
# date created: 23 Aug 2020
# modified: 23 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBECMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbecmbd/VecWdbe -I$(SRCROOT)/wdbecmbd/IexWdbe -I$(SRCROOT)/wdbecmbd
INCPATH += -I/home/mpsitech/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/include/postgresql -I/usr/local/include

OBJS = CrdWdbePrc.o PnlWdbePrcRec.o PnlWdbePrcDetail.o PnlWdbePrcKHdltype.o QryWdbePrcKHdltype.o PnlWdbePrcPrc1NVariable.o QryWdbePrcPrc1NVariable.o PnlWdbePrcMge1NSignal.o QryWdbePrcMge1NSignal.o PnlWdbePrcFsmFsm1NFsmstate.o QryWdbePrcFsmFsm1NFsmstate.o PnlWdbePrcHeadbar.o PnlWdbePrcList.o QryWdbePrcList.o

LIB = libcrdwdbeprc

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbecmbd/

clean:
	rm -f *.o

