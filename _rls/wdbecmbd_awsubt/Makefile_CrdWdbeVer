# file Makefile
# make file for CrdWdbeVer card job handler, release wdbecmbd_awsubt
# author Alexander Wirthmueller
# date created: 23 Aug 2020
# modified: 23 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBECMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbecmbd/VecWdbe -I$(SRCROOT)/wdbecmbd/IexWdbe -I$(SRCROOT)/wdbecmbd
INCPATH += -I/home/ubuntu/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWdbeVer.o DlgWdbeVerBscdd.o DlgWdbeVerDetdd.o DlgWdbeVerNew.o PnlWdbeVerRec.o PnlWdbeVerDetail.o PnlWdbeVer1NRelease.o QryWdbeVer1NRelease.o PnlWdbeVer1NSystem.o QryWdbeVer1NSystem.o PnlWdbeVerBvr1NVersion.o QryWdbeVerBvr1NVersion.o PnlWdbeVerRef1NFile.o QryWdbeVerRef1NFile.o PnlWdbeVer1NUnit.o QryWdbeVer1NUnit.o PnlWdbeVerMNLibrary.o QryWdbeVerMNLibrary.o PnlWdbeVerHeadbar.o PnlWdbeVerList.o QryWdbeVerList.o

LIB = libcrdwdbever

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbecmbd/

clean:
	rm -f *.o

