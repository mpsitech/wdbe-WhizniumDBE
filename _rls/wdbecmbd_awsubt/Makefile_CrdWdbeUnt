# file Makefile
# make file for CrdWdbeUnt card job handler, release wdbecmbd_awsubt
# author Alexander Wirthmueller
# date created: 23 Aug 2020
# modified: 23 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBECMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbecmbd/VecWdbe -I$(SRCROOT)/wdbecmbd/IexWdbe -I$(SRCROOT)/wdbecmbd
INCPATH += -I/home/ubuntu/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWdbeUnt.o PnlWdbeUntRec.o PnlWdbeUntDetail.o PnlWdbeUnt1NBank.o QryWdbeUnt1NBank.o PnlWdbeUntFwd1NController.o QryWdbeUntFwd1NController.o PnlWdbeUnt1NTarget.o QryWdbeUnt1NTarget.o PnlWdbeUntSil1NUnit.o QryWdbeUntSil1NUnit.o PnlWdbeUnt1NPeripheral.o QryWdbeUnt1NPeripheral.o PnlWdbeUntRef1NCommand.o QryWdbeUntRef1NCommand.o PnlWdbeUntHk1NModule.o QryWdbeUntHk1NModule.o PnlWdbeUntHk1NVector.o QryWdbeUntHk1NVector.o PnlWdbeUntRef1NError.o QryWdbeUntRef1NError.o PnlWdbeUntHeadbar.o PnlWdbeUntList.o QryWdbeUntList.o

LIB = libcrdwdbeunt

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbecmbd/

clean:
	rm -f *.o

