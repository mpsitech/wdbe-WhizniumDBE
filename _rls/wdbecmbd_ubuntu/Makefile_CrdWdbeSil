include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBECMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswdbe -I$(BUILDROOT)/wdbecmbd/VecWdbe -I$(BUILDROOT)/wdbecmbd/IexWdbe -I$(BUILDROOT)/wdbecmbd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWdbeSil.o PnlWdbeSilList.o QryWdbeSilList.o PnlWdbeSilHeadbar.o PnlWdbeSilRec.o PnlWdbeSilRef1NCommand.o QryWdbeSilRef1NCommand.o PnlWdbeSilRef1NError.o QryWdbeSilRef1NError.o PnlWdbeSilRef1NSignal.o QryWdbeSilRef1NSignal.o PnlWdbeSilHk1NVector.o QryWdbeSilHk1NVector.o PnlWdbeSilHk1NModule.o QryWdbeSilHk1NModule.o PnlWdbeSil1NBank.o QryWdbeSil1NBank.o PnlWdbeSilFwd1NController.o QryWdbeSilFwd1NController.o PnlWdbeSilSil1NUnit.o QryWdbeSilSil1NUnit.o PnlWdbeSil1NPeripheral.o QryWdbeSil1NPeripheral.o PnlWdbeSil1NInterrupt.o QryWdbeSil1NInterrupt.o PnlWdbeSil1NTarget.o QryWdbeSil1NTarget.o PnlWdbeSilDetail.o

LIB = libcrdwdbesil

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)

install:
	mv $(LIB).a $(LIBROOT)/wdbecmbd/

clean:
	rm -f *.o
