include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBECMBD

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(BUILDROOT)/dbswdbe -I$(BUILDROOT)/wdbecmbd/VecWdbe -I$(BUILDROOT)/wdbecmbd/IexWdbe -I$(BUILDROOT)/wdbecmbd
INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWdbeCvr.o PnlWdbeCvrList.o QryWdbeCvrList.o PnlWdbeCvrHeadbar.o PnlWdbeCvrRec.o PnlWdbeCvrHk1NModule.o QryWdbeCvrHk1NModule.o PnlWdbeCvrBcv1NCoreversion.o QryWdbeCvrBcv1NCoreversion.o PnlWdbeCvrAIp.o QryWdbeCvrAIp.o PnlWdbeCvrAPlh.o QryWdbeCvrAPlh.o PnlWdbeCvrDetail.o DlgWdbeCvrBsccd.o DlgWdbeCvrNew.o DlgWdbeCvrDetcd.o DlgWdbeCvrWrite.o

LIB = libcrdwdbecvr

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbecmbd/

