INCPATH += -I${WHIZSDKROOT}/build -I${WHIZSDKROOT}/build/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mariadb

OBJS = CrdWdbeMod.o PnlWdbeModRec.o PnlWdbeModDetail.o PnlWdbeModKHdltype.o QryWdbeModKHdltype.o PnlWdbeModAPar.o QryWdbeModAPar.o PnlWdbeModHsm1NPipeline.o QryWdbeModHsm1NPipeline.o PnlWdbeMod1NProcess.o QryWdbeMod1NProcess.o PnlWdbeModMdl1NPort.o QryWdbeModMdl1NPort.o PnlWdbeModMdl1NGeneric.o QryWdbeModMdl1NGeneric.o PnlWdbeModSup1NModule.o QryWdbeModSup1NModule.o PnlWdbeModRef1NSignal.o QryWdbeModRef1NSignal.o PnlWdbeModRef1NSensitivity.o QryWdbeModRef1NSensitivity.o PnlWdbeModRef1NVariable.o QryWdbeModRef1NVariable.o PnlWdbeModMge1NSignal.o QryWdbeModMge1NSignal.o PnlWdbeModCtrRef1NError.o QryWdbeModCtrRef1NError.o PnlWdbeModCtrHk1NVector.o QryWdbeModCtrHk1NVector.o PnlWdbeModCtrRef1NCommand.o QryWdbeModCtrRef1NCommand.o PnlWdbeModMNPeripheral.o QryWdbeModMNPeripheral.o PnlWdbeModCtdMNModule.o QryWdbeModCtdMNModule.o PnlWdbeModCorMNModule.o QryWdbeModCorMNModule.o PnlWdbeModCtrMNCommand.o QryWdbeModCtrMNCommand.o PnlWdbeModHeadbar.o PnlWdbeModList.o QryWdbeModList.o

LIB = libcrdwdbemod

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

