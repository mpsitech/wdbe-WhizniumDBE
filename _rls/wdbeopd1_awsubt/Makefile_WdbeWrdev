# file Makefile
# make file for operation pack WdbeWrdev, release wdbeopd1_awsubt
# author Alexander Wirthmueller
# date created: 23 Aug 2020
# modified: 23 Aug 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbeopd1/VecWdbe -I$(SRCROOT)/wdbeopd1/IexWdbe -I$(SRCROOT)/wdbeopd1
INCPATH += -I/usr/include -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = WdbeWrdev_blks.o WdbeWrdev.o
OBJS += WdbeWrdevBase.o WdbeWrdevCtr.o WdbeWrdevDeploy.o WdbeWrdevSys.o WdbeWrdevUnt.o

LIB = libwdbewrdev

.SUFFIXES:	.cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbeopd1/

clean:
	rm -f *.o

