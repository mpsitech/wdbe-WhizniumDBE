# file Makefile
# make file for CrdWdbeUsr card job handler, release wdbed_awsubt
# author Alexander Wirthmueller
# date created: 11 Jul 2020
# modified: 11 Jul 2020

include ../Makefile.inc

CPP = g++
CPPFLAGS = -std=c++11 -g -Wall -Os -pthread -DWDBED

STATLIB = ar
STATLIBFLAGS = rcs

INCPATH = -I$(SRCROOT)/dbswdbe -I$(SRCROOT)/wdbed/VecWdbe -I$(SRCROOT)/wdbed/IexWdbe -I$(SRCROOT)/wdbed
INCPATH += -I/home/ubuntu/src/apiwzlm -I/usr/include -I/usr/include/jsoncpp -I/usr/include/libxml2 -I/usr/include/mysql -I/usr/local/include

OBJS = CrdWdbeUsr.o PnlWdbeUsrList.o QryWdbeUsrList.o PnlWdbeUsrHeadbar.o PnlWdbeUsrRec.o PnlWdbeUsrMNUsergroup.o QryWdbeUsrMNUsergroup.o PnlWdbeUsr1NSession.o QryWdbeUsr1NSession.o PnlWdbeUsrAAccess.o QryWdbeUsrAAccess.o PnlWdbeUsrDetail.o DlgWdbeUsrMngkeypair.o

LIB = libcrdwdbeusr

.SUFFIXES: .cpp

.cpp.o :
	$(CPP) $(CPPFLAGS) $(INCPATH) -o $@ -c $<

all:	$(LIB)

$(LIB):	$(OBJS)
	$(STATLIB) $(STATLIBFLAGS) $(LIB).a $(OBJS)
	rm -f *.o

install:
	mv $(LIB).a $(LIBROOT)/wdbed/

clean:
	rm -f *.o

